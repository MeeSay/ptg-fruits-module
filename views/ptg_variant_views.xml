<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_ptg_variant" model="ir.ui.view">
            <field name="name">ptg.variant.form</field>
            <field name="model">ptg.variant</field>
            <field name="arch" type="xml">
                <form string="PTG Variant">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="value" />
                            <field name="text_color" />
                            <field name="background_color" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tree_ptg_variant" model="ir.ui.view">
            <field name="name">ptg.variant.tree</field>
            <field name="model">ptg.variant</field>
            <field name="arch" type="xml">
                <tree string="PTG Variant">
                    <field name="name" />
                    <field name="value" />
                    <field name="text_color" />
                    <field name="background_color" />
                </tree>
            </field>
        </record>
    </data>
</odoo>